[Unit]
Description=K-Rangers AI Server
After=network.target

[Service]
Type=simple
User=gamja
WorkingDirectory=/home/gamja/K-Rangers/AI
Environment=PATH=/home/gamja/K-Rangers/AI/venv/bin
Environment=OPENAI_API_KEY=your-api-key-here
ExecStart=/home/gamja/K-Rangers/AI/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
